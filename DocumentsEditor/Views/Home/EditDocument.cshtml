@model DocumentsEditor.Models.Document
@{
    ViewData["Title"] = "Редактирование документа";
}

<script src="~/ckeditor/ckeditor.js"></script>
<form asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="HtmlText" class="control-label">Текст</label>
        <div>
            <textarea id="content" asp-for="HtmlText" class="form-control"></textarea>
        </div>
    </div>
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
    </div>
</form>
<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        var editor = CKEDITOR.replace('content');
    });
</script>
